mixin contactItem(title, addClasses='')
	+e.item(class=addClasses)
		+e.header.h4.font-monospace=title
		block

mixin tableRow(name, val)
	+e.tab-row.row
		if name
			+e.gray-col.col-auto.col-xl-4!=name
			if val
				+e.white-col.col-auto.col-xl-8!=val
			else
				block
		else
			+e.white-col.col-12!=val