mixin headerBlock()
	// start headerBlock
	+b.headerBlock.section#headerBlock&attributes(attributes)
			+e.slider-wrap
				.swiper.gallery-top
					.swiper-wrapper
						+headerBlockSlide()
						+headerBlockSlide()
						//- +headerBlockSlide(2)
						+headerBlockSlide()
						+headerBlockSlide()
					.swiper-pagination

	// end headerBlock

mixin headerBlockSlide(imgNum='1')
	+e.slide.swiper-slide
		+e.slide-link(href='#')
			picture
				<source media="(min-width: 1000px)" srcset="img/pavobulb_1690x700.png"/>
				<source media="(min-width: 576px)" srcset="img/pavobulb_1000x700.png"/>
				<img loading="lazy" src="img/pavobulb_576x700.png" alt=""/>
