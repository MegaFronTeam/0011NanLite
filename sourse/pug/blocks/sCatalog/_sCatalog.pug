	+b.sCatalog--hit.section#sCatalogHit&attributes(attributes)
		.container
			+b.section-title
				h2!= title
			+e.slider-wrappper
				+e.slider--js.swiper
					.swiper-wrapper
						+e.slide.swiper-slide
							+item-prod('7', 'slider', 'Арт. №15-2009-4KIT', 'Крепление магнитное для лампы Nanlite PavoBulb 10C', '860 ₽', '1 000 ₽')
