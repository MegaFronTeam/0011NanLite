mixin item-prod(i, slider, code='Арт. №15-2009-4KIT', t="Светодиодная лампа-трубка Nanlite PavoTube II 6C", newPrice ,hasOldPrice, inStock=true)
	+b.prod-item&attributes(attributes)
		+e.links
			+e.compare(href="#")
				+icon('heart')
		block
		+e.A.img-link(href="#")
			+e.img-wrap
				if !slider
					.img-wrap-center
						img(loading="lazy" src=`img/@2x/catalog-img-${i}.png`, alt="")
				else
					.img-wrap-center
						img.swiper-lazy(src="#" data-src=`img/@2x/catalog-img-${i}.png`, alt="")
			+e.title= t
		+e.box
			+e.price-wrap
				+e.price--new!= newPrice
				if hasOldPrice
					+e.price--old!= hasOldPrice
			+e.code=code
			if inStock
				+e.inStock в наличии
			else
				+e.notInStock нет в наличии
		+e.btn(href="#") Купить

