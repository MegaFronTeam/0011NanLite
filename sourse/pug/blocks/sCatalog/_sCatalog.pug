mixin sCatalog(data)
	// start sCatalog
	+b.SECTION.sCatalog.section#sCatalog&attributes(attributes)
		.container
			+b.section-title
				h2 Хиты продаж
	// end sCatalog

mixin sCatalogHit(title='Хиты продаж')
	// start sCatalog
	+b.sCatalog.section#sCatalogHit&attributes(attributes)
		.container
			+b.section-title
				h2!= title
			+e.slider-wrappper
				+e.slider--js.swiper
					.swiper-wrapper
						+e.slide.swiper-slide
							+item-prod('1', 'slider', 'GBH 36 V-LI PLUS','Аккумуляторный шуруповерт')
						+e.slide.swiper-slide
							+item-prod('2', 'slider', 'GBH 36 V-LI PLUS', 'Аккумуляторная угловая шлифмашина с X-LOCK')
						+e.slide.swiper-slide
							+item-prod('3', 'slider', 'GBH 36 V-LI PLUS', 'Клеевой пистолет')
						+e.slide.swiper-slide
							+item-prod('4', 'slider', 'GBH 36 V-LI PLUS', 'Аккумуляторная шуруповерт')
				+arrow('d-none d-sm-flex')

