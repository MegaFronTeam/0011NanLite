mixin footer()
	+b.FOOTER.footer
		.container
			mixin footerItem(title, ...items)
				+e.col.col-sm-6.col-lg-3
					+e.b-item
						+e.b-head.dd-head-js!= title
						+e.b-content.dd-content-js
							ul
								each item in items
									li
										a(href="#")!= item
							block
			.footer-dd-group-js
				.row
					+footerItem('Каталог продукции', 'Новинки', 'Осветители', 'LED светильники', 'Люминесцентный свет', 'Аксессуары')
					+footerItem('Nanlite', 'О компании', 'Где мы находимся', 'Общая информация', 'Контакты', 'Сертификаты', 'Новости')
					+footerItem('Где купить?', 'Где купить?', 'Интернет магазины')
					+footerItem('Сервис', 'Сервисы по ремонту инструмента')
						+e.wrap
							.h5 Контакты
							a(href="tel: +74952225050") +7 (495) 222-50-50
							a(href="tel: +74952225050") +7 (495) 222-50-50
			+e.inner-row.row
				.col-md
					+e.row.row
						+e.col-link.col-auto 
							a(href="#") Условия использования
						+e.col-link.col-auto 
							a(href="#") Конфиденциальность
						+e.col-link.col-auto 
							a(href="#") История обновлений
						+e.col-link.col-auto 
							a(href="#") Информация о файлах cookie
				.col-md-3
					+e.copyright &copy;&nbsp;NANLITE Co., Ltd. All rights reserved.
			a(href="/")
				+pic('logoWhite.png')