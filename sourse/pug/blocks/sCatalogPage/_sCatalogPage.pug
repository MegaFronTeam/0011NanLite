mixin sCatalogPage(data)
	// start sCatalogPage
	+b.SECTION.sCatalogPage.section#sCatalogPage&attributes(attributes)
		+e.container.container
			block
			+e.main-row.row
				.col-lg-3
					+b.cat-aside.cat-aside-dd-js
						+e.box
							+e.header Продукция
								+icon('chevron-down')
							+e.items
								+e.link(href="#").active Светодиодные лампы-трубки Nanlite PavoTube LED
								+e.link(href="#") Светодиодные панели Nanlite LED
								+e.link(href="#") Осветители направленного света Nanlite LED
								+e.link(href="#") Принадлежности и аксессуары Nanlite
