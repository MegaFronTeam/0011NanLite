						h1 Каталог
					+e.row.row
						+catalogPageItem(1, 'Светодиодные лампы-трубки Nanlite PavoTube LED')
						+catalogPageItem(2, 'Светодиодные панели Nanlite LED')
						+catalogPageItem(3, 'Осветители направленного света Nanlite LED')
						+catalogPageItem(4, 'Принадлежности и аксессуары Nanlite')
